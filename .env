zookeeper
ZOOKEEPER_VERSION=7.3.2
ZOOKEEPER_PORT=2181
ZOOKEEPER_EXPOSED_PORT=2181


#kafka
KAFKA_VERSION=7.3.2
KAFKA_OUTSIDE_HOST=localhost
KAFKA_OUTSIDE_PORT=9093
KAFKA_INTERNAL_HOST=kafka
KAFKA_INTERNAL_PORT=9092
KAFKA_BROKER_ID=1
KAFKA_ZOOKEEPER_CONNECT=zookeeper:2181
KAFKA_INTER_BROKER_LISTENER_NAME=INTERNAL
KAFKA_LISTENER_SECURITY_PROTOCOL_MAP=OUTSIDE:PLAINTEXT,INTERNAL:PLAINTEXT
#this is how you access the broker
KAFKA_ADVERTISED_LISTENERS=INTERNAL://${KAFKA_INTERNAL_HOST}:${KAFKA_INTERNAL_PORT},OUTSIDE://${KAFKA_OUTSIDE_HOST}:${KAFKA_OUTSIDE_PORT}
#SSL SETUP VARIABLES
KAFKA_SSL_KEYSTORE_LOCATION=/etc/kafka/secrets/kafka.kafka.keystore.jks
KAFKA_SSL_KEYSTORE_PASSWORD=confluent
KAFKA_SSL_KEY_PASSWORD=confluent
KAFKA_SSL_TRUSTSTORE_LOCATION=etc/kafka/secrets/kafka.kafka.truststore.jks
KAFKA_SSL_TRUSTSTORE_PASSWORD=confluent
KAFKA_SECURITY_PROTOCOL=SSL
KAFKA_SSL_ENDPOINT_IDENTIFICATION_ALGORITHM=


# Project name
COMPOSE_PROJECT_NAME=fiware

# Orion LD variables
ORION_LD_PORT=1026
ORION_LD_VERSION=1.2.1

# Scorpio variables
SCORPIO_PORT=9090
SCORPIO_VERSION=4.0.2

# Stellio variables
STELLIO_DOCKER_TAG=2.0.0
STELLIO_PORT=8080

# MongoDB variables
MONGO_DB_PORT=27017
MONGO_DB_VERSION=4.4

# IoT Agent Ultralight Variables
ULTRALIGHT_VERSION=2.2.0-distroless
IOTA_NORTH_PORT=4041
IOTA_SOUTH_PORT=7896

# Tutorial variables
TUTORIAL_APP_PORT=3000
TUTORIAL_DUMMY_DEVICE_PORT=3001

#grafana variables
GRAFANA_VERSION=9.3.6
GRAFANA_INTERNAL_PORT=3000
GRAFANA_EXPOSED_PORT=3000
GF_SECURITY_ADMIN_USER=admin
GF_SECURITY_ADMIN_PASSWORD=admin
GF_USERS_ALLOW_SIGN_UP=false
GF_LOG_MODE=console file
GF_SERVER_PROTOCOL=https
GF_SERVER_CERT_FILE=/certs/grafana.crt
GF_SERVER_CERT_KEY=/certs/grafana.key
GF_SECURITY_ALLOW_EMBEDDING=true
